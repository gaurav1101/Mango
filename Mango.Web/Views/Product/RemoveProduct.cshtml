@model Mango.Web.Models.Dto.ProductDto
<form asp-action="ProductCoupon">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Product</h1>
        <input asp-for="ProductId" hidden />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Product Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" disabled />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Price</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" disabled />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Description</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" disabled />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Image</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ImageUrl" class="form-control" disabled />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Category</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CategoryName" class="form-control" disabled />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">

                <a class="btn-primary btn form-control " asp-controller="Product" asp-action="ProductIndex">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" asp-controller="Product" asp-action="RemoveProduct" class="btn btn-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section scripts{
    <partial name="_ValidationScriptsPartial" />
                }